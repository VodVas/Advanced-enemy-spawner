using UnityEngine;

public class Enemy : MonoBehaviour
{
    [SerializeField, Range(1, 10)] private float _speed;

    [SerializeField] private Transform _endPointPosition;

    private void Update()
    {
        Move();
    }

    private void Move()
    {
        transform.position = Vector3.MoveTowards(transform.position, _endPointPosition.transform.position, _speed * Time.deltaTime);
    }

    public void SetDirection(Transform endPointPosition)
    {
        _endPointPosition = endPointPosition;
    }
}
